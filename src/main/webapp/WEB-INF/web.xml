<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>LawSuit Tracker</display-name>
  
  <filter>
    <filter-name>AuthenticationFilter1</filter-name>
    <filter-class>com.lawsuittracker.util.RestAuthenticationFilter</filter-class>
  </filter>
  
  <filter>
    <filter-name>AuthenticationFilter2</filter-name>
    <filter-class>com.lawsuittracker.util.PVAuthenticationFilter</filter-class>
  </filter>
  
  <filter>
    <filter-name>CORSFilter2</filter-name>
    <filter-class>com.lawsuittracker.util.FilterAction</filter-class>
  </filter>
  
  <filter-mapping>
    <filter-name>AuthenticationFilter1</filter-name>
    <url-pattern>/rest/*</url-pattern>
  </filter-mapping>
   
     
  
  <filter-mapping>
    <filter-name>AuthenticationFilter2</filter-name>
    <url-pattern>/pvApi/*</url-pattern>
  </filter-mapping>
  
   <filter-mapping>
    <filter-name>CORSFilter2</filter-name>
    <url-pattern>/rest/*</url-pattern>
  </filter-mapping>
  
 
    <listener>
		<listener-class>
			org.quartz.ee.servlet.QuartzInitializerListener
		</listener-class>
		</listener>
  
    
   <servlet>
  
   <servlet-name>Jersey REST Service1</servlet-name>  
    <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>  
    <init-param>  
        <param-name>com.sun.jersey.config.property.packages</param-name>  
        <param-value>com.lawsuittracker.service</param-value>  
    </init-param>
    <init-param>
        <param-name>com.sun.jersey.api.json.POJOMappingFeature</param-name>
        <param-value>true</param-value>
    </init-param>
   
  <init-param>
    <param-name>jersey.config.server.provider.classnames</param-name>
    <param-value>org.glassfish.jersey.filter.LoggingFilter;org.glassfish.jersey.media.multipart.MultiPartFeature</param-value>
</init-param>
   
    <load-on-startup>1</load-on-startup>  
   </servlet>  
  
  
  <servlet>
  
   <servlet-name>Jersey REST Service2</servlet-name>  
    <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>  
    <init-param>  
        <param-name>com.sun.jersey.config.property.packages</param-name>  
        <param-value>com.lawsuittracker.pvIntService</param-value>  
    </init-param>
    <init-param>
        <param-name>com.sun.jersey.api.json.POJOMappingFeature</param-name>
        <param-value>true</param-value>
    </init-param>
   
  <init-param>
    <param-name>jersey.config.server.provider.classnames</param-name>
    <param-value>org.glassfish.jersey.filter.LoggingFilter;org.glassfish.jersey.media.multipart.MultiPartFeature</param-value>
</init-param>
   
    <load-on-startup>2</load-on-startup>  
   </servlet> 
    <servlet-mapping>  
    <servlet-name>Jersey REST Service1</servlet-name>  
    <url-pattern>/rest/*</url-pattern>  
  </servlet-mapping> 
  <servlet-mapping>  
    <servlet-name>Jersey REST Service2</servlet-name>  
    <url-pattern>/pvApi/*</url-pattern>  
  </servlet-mapping> 
  
   <session-config>
	<session-timeout>480</session-timeout>
</session-config>
  
 <resource-ref>
    <description>SQL Datasource example</description>
<!--      <res-ref-name>jdbc/RELCALDB</res-ref-name> -->
    <res-ref-name>jdbc/RCBRPL-95002539\SQLEXPRESS</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
</resource-ref>
 
 <resource-ref>
    <description>Second DB Datasource</description>
    <res-ref-name>jdbc/RCBRPL-95002539\SQLEXPRESS_SECONDDB</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
</resource-ref> 
  
</web-app>
